// Объявление переменных
dark-minimal-color = #000
light-minimal-color = #fff
table-title-color = #fff45f
table-lines-color = #F5F5F5
// Конец объявления перменных

body
  font-family 'Oswald', sans-serif

.container
  max-width 1080px
  margin 0 auto

// Общий стиль кнопочек
.btn,
.btn.add-contact
  padding 10px
  font-weight 700
  text-transform uppercase
  outline none
  border 2px solid dark-minimal-color
  background-color light-minimal-color
  &:hover,
  &:focus
    background-color dark-minimal-color
    color light-minimal-color
    cursor pointer
// Конец общего стиля кнопочек

// Стили для панели с сёчбаром и кнопкой добавления
.control-panel
  display flex
  .search-input
    margin-right 10px
    border none
    border-bottom 2px solid dark-minimal-color
    outline none
    font-size 20px
    &::placeholder
      color dark-minimal-color
// Конец стилей для панели с сёчбаром и кнопкой добавления

// Стили для таблицы контактов
.contact-table
  display flex
  margin-top 10px
  tbody
    display block
    width 100%
    tr:nth-of-type(even)
      background-color table-lines-color
    tr
      display flex
      td, th
        flex 1 1 300px
        padding 15px
      th
        text-align left
        background-color table-title-color
        color dark-minimal-color
        a
          text-decoration none
          color dark-minimal-color
// Конец стилей для таблицы контактов

// Стили для модального окна
.ng-modal-overlay
  position absolute
  z-index 9999
  top 0
  left 0
  width 100%
  height 100%
  background-color dark-minimal-color
  opacity 0.8

.ng-modal-dialog
  z-index 10000
  position absolute
  width 35%
  max-width 400px
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color light-minimal-color
  box-shadow 4px 4px 80px dark-minimal-color

.ng-modal-dialog-content
  padding 10px
  text-align left

.ng-modal-close
  position absolute
  top 3px
  right 5px
  padding 5px
  cursor pointer
  font-size 120%
  display inline-block
  font-weight bold
  font-family 'arial', 'sans-serif'
// Конец стилей для модального окна

// Стили для формы в модальном окне
.modalForm
  padding 20px
  box-sizing border-box
  .input-field
    display flex
    flex-direction column
    margin-bottom 20px
    input
      box-sizing border-box
      border 2px solid dark-minimal-color
      height 40px
      font-size 20px
      padding-left 10px
      outline none
    label
      margin-right 10px
  .modalForm__btns
    display flex
    justify-content space-between
    .btn
      flex: 1
      padding 20px
      font-size: 15px
      &:hover
        cursor pointer
    .addition-btn
      margin-right 10px
// Конец стилей для формы в модальном окне